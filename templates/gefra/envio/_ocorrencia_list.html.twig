<div class="card-body">
    {% if ocorrencias|length > 0 %}
        <div class="table-responsive">
            <table class="table table-bordered dataTable table-striped compact"
                   width="100%" cellspacing="0">
                <thead class="bg-dark text-white">
                <tr>
                    <th>#</th>
                    <th>{{ 'gefra.ocorrencia.labels.dt_criacao'|trans }}</th>
                    <th>{{ 'gefra.ocorrencia.labels.tipo'|trans }}</th>
                    <th>{{ 'gefra.ocorrencia.labels.atividade'|trans }}</th>
                    <th>{{ 'gefra.ocorrencia.labels.criado_por'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for ocorrencia in ocorrencias %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ ocorrencia.createdAt|date('d/m/Y H:i') }}</td>
                        <td>{{ ocorrencia.tipo|upper }}</td>
                        <td>{{ ocorrencia.descricao }}</td>
                        <td>{{ ocorrencia.usuario }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert-warning">{{ 'empty-result'|trans }}</div>
    {% endif %}
</div>