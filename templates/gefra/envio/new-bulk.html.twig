{% extends 'base.html.twig' %}

{% block title %}{{ 'gefra.envio.load-file-title'|trans }}{% endblock %}

{% block menu %}
    {% embed '_menu.html.twig' %}
        {% block app_panel %}
            {% include 'gefra/_app-menu.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock menu %}

{% block user_content %}
    <div class="content-wrapper">
        {{ parent() }} {# Printing Messages inside Wrapper Content #}
        <div class="container">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('gefra-home') }}">{{ 'home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('gefra_envio_index') }}">{{ 'gefra.envio.index'|trans }}</a></li>
                <li class="breadcrumb-item active">{{ 'load-file'|trans }}</li>
            </ol>
            <div class="row">
                <div class="col-12">
                    <h1>{{ 'gefra.envio.load-file-title'|trans }}</h1>

                    {{ form_start(form) }}
                    <div class="card mb-3 border-apps-4">
                        <div class="card-header bg-apps-4 text-white">
                            <div class="row">
                                <div class="col-sm-8">
                                    <i class="fa fa-2x fa-plus-circle fa-2x"></i>
                                    {{ 'gefra.envio.load-file-form-title'|trans }}
                                </div>
                            </div>
                        </div>
                        <div class="card-body form-with-cols">
                            <div class="alert alert-info">
                                <p>{{ 'gefra.envio.load-file-form-description'|trans|raw }}</p>

                                <p>
                                    <a class="link card-link" href="{{ path('gefra_samplefile', {'source': 'envio'}) }}">
                                        {{ 'gefra.envio.load-file-example-link'|trans }}
                                    </a>
                                </p>
                            </div>
                            <fieldset>
                                {{ form_row(form.registry) }}
                            </fieldset>

                        </div>
                        <div class="card-footer">
                            <div class="row form-group justify-content-md-center">
                                <div class="col-4">
                                    <button class="btn btn-primary btn-block " type="submit">
                                        <i class="fa fa-save"></i> {{ button_label|default('save')|trans }}
                                    </button>
                                </div>
                                <div class="col-4">
                                    <a class="btn btn-secondary btn-block" href="{{ path('gefra_envio_index') }}">
                                        <i class="fa fa-close"></i> {{ button_label|default('cancel')|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
