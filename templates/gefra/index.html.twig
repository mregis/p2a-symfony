{% extends 'base.html.twig' %}

{% block title %}{{ 'gefra.homepage'|trans }}{% endblock %}

{% block menu %}
    {% embed '_menu.html.twig' %}
        {% block app_panel %}
            {% include 'gefra/_app-menu.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock menu %}

{% block user_content %}
    <div class="content-wrapper">
        {{ parent() }} {# Printing Messages inside Wrapper Content #}
        <div class="container">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">/{{ 'gefra.homepage'|trans }}</li>
            </ol>
            <div class="row">
                <div class="col-12">
                    <h1>{{ 'gefra.homepage'|trans }}</h1>

                    <p>{{ 'gefra.homepage-description' |trans }}</p>
                </div>
            </div>
            <div class="row">
                {% if is_granted('ROLE_MASTER') %}
                    <div class="col-xl-3 col-sm-3 mb-3">
                        <div class="card bg-apps-0 o-hidden h-100">
                            <a href="{{ path('gefra_juncao_index') }}">
                                <div class="card-body text-white">
                                    <div class="card-body-icon">
                                        <i class="fas fa-briefcase"></i>
                                    </div>
                                    <h5 class="mr-5">{{ 'gefra.juncao.index'|trans }}</h5>
                                </div></a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-3 mb-3">
                        <div class="card bg-apps-2 o-hidden h-100">
                            <a href="{{ path('gefra_sla_index') }}">
                                <div class="card-body text-white">
                                    <div class="card-body-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <h5 class="mr-5">{{ 'gefra.sla.index'|trans }}</h5>
                                </div></a>
                        </div>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="col-xl-3 col-sm-3 mb-3">
                        <div class="card bg-apps-1 o-hidden h-100">
                            <a href="{{ path('gefra_operador_index') }}">
                                <div class="card-body text-white">
                                    <div class="card-body-icon">
                                        <i class="fas fa-box-open"></i>
                                    </div>
                                    <h5 class="mr-5">{{ 'gefra.operador.index'|trans }}</h5>
                                </div></a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-3 mb-3">
                        <div class="card bg-apps-5 o-hidden h-100">
                            <a href="{{ path('gefra_transportadora_index') }}">
                                <div class="card-body">
                                    <div class="card-body-icon">
                                        <i class="fas fa-truck-moving"></i>
                                    </div>
                                    <h5 class="mr-5"><small>{{ 'gefra.transportadora.index'|trans }}</small></h5>
                                </div></a>
                        </div>
                    </div>
                    <div class="col-xl-3 col-sm-3 mb-3">
                        <div class="card bg-apps-4 o-hidden h-100">
                            <a href="{{ path('gefra_tipo_envio_status_index') }}">
                                <div class="card-body text-white">
                                    <div class="card-body-icon">
                                        <i class="fas fa-sync"></i>
                                    </div>
                                    <h5 class="mr-5">{{ 'gefra.tipo-envio-status.index'|trans }}</h5>
                                </div></a>
                        </div>
                    </div>
                {% endif %}
                <div class="col-xl-3 col-sm-3 mb-3">
                    <div class="card bg-apps-3 o-hidden h-100">
                        <a href="{{ path('gefra_envio_index') }}">
                            <div class="card-body text-white">
                                <div class="card-body-icon">
                                    <i class="fas fa-truck-loading"></i>
                                </div>
                                <h5 class="mr-5">{{ 'gefra.envio.index'|trans }}</h5>
                            </div></a>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock user_content %}

