{% extends 'base.html.twig' %}

{% form_theme form 'form/horizontal-form-fields.html.twig' %}

{% block title %}{{ 'gefra.juncao.new'|trans }}{% endblock %}

{% block menu %}
    {% embed '_menu.html.twig' %}
        {% block app_panel %}
            {% include 'gefra/_app-menu.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock menu %}

{% block user_content %}
    <div class="content-wrapper">
        {{ parent() }} {# Printing Messages inside Wrapper Content #}
        <div class="container">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('gefra-home') }}">{{ 'home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('gefra_juncao_index') }}">{{ 'gefra.juncao.index'|trans }}</a>
                </li>
                <li class="breadcrumb-item">{{ 'new'|trans }}</li>
            </ol>
            <div class="row">
                <div class="col-12">
                    <h1>{{ 'gefra.juncao.new'|trans }}</h1>

                    <div class="card mb-3 border-apps-0">
                        <div class="card-header bg-apps-0 text-white">
                            <div class="row">
                                <div class="col-8">
                                    <i class="fa fa-2x fa-plus-circle fa-2x"></i>
                                    {{ 'gefra.juncao.new-form-title'|trans }}
                                </div>
                                <div class="col-auto text-right">
                                    {% if is_granted('ROLE_MASTER') %}
                                        <a class="btn btn-sm btn-info" href="{{ path('gefra_juncao_loadfile') }}">
                                            <span class="fas fa-plus-circle"></span> {{ 'gefra.juncao.new-bulk'|trans }}
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="card-body form-with-cols">
                            {{ include('gefra/juncao/_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
