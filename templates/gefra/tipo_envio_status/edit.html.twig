{% extends 'base.html.twig' %}

{% block title %}{{ 'gefra.tipo-envio-status.edit'|trans }}{% endblock %}

{% block menu %}
    {% embed '_menu.html.twig' %}
        {% block app_panel %}
            {% include 'gefra/_app-menu.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock menu %}

{% block user_content %}
    <div class="content-wrapper">
        {{ parent() }} {# Printing Messages inside Wrapper Content #}
        <div class="container">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('gefra-home') }}">{{ 'home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('gefra_tipo_envio_status_index') }}">{{ 'gefra.tipo-envio-status.index'|trans }}</a>
                </li>
                <li class="breadcrumb-item">{{ 'edit'|trans }}</li>
            </ol>
            <div class="row">
                <div class="col-12">
                    <h1>{{ 'gefra.tipo-envio-status.edit'|trans({'%name%' : tipo_envio_status.nome }) }}</h1>

                    <div class="card mb-3 border-apps-4">
                        <div class="card-header bg-apps-4 text-white">
                            <div class="row">
                                <div class="col-8">
                                    <i class="fa fa-2x fa-plus-circle fa-2x"></i>
                                    {{ 'gefra.tipo-envio-status.edit-form-title'|trans({'%name%' : tipo_envio_status.nome }) }}
                                </div>
                            </div>
                        </div>
                        <div class="card-body form-with-cols">
                            {{ include('gefra/tipo_envio_status/_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
