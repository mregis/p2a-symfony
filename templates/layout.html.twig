<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="{{ description }}">
    <meta name="author" content="Marcos Regis <marcos.regis@address.com.br>">
    <title>{% block title '' %}</title>
    <!-- Application CSS -->
    <link rel="stylesheet" href="{{ asset('resources/app.css') }}">
    <!-- Application Icon -->
    <link rel="shortcut icon" href="{{ asset('resources/favicon.png') }}" type="image/x-icon"/>
    {% block my_CSS %}

    {% endblock my_CSS %}

{#
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
#}

    {% if app.environment == 'prod' %}
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-XXXXXXXX-X']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script');
                ga.type = 'text/javascript';
                ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0];
                s.parentNode.insertBefore(ga, s);
            })();
        </script>
    {% endif %}
</head>
<body class="fixed-nav site-footer" id="page-top">
{% block menu %}
    {% include 'menu.html.twig' %}
{% endblock menu %}

    <div class="container-fluid">
{% block content %}
    {% block messages %}
        {% if app.request.hasPreviousSession %}
            <div class="container">
                {% for alert in [ 'info', 'success', 'warning', 'danger'] %}
                    {% for message in app.flashes(alert) %}
                        <div class="alert alert-{{ alert }} alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                            {{ message|trans }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}
    {% endblock %}
    {% block user_content %}
        <div class="container">
        </div>
    {% endblock %}
{% endblock %}
    </div>
    <!-- /.container-fluid-->

{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock footer %}


{% block my_modals %}
    {% if error is defined and error %}
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="MyModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-danger">
                        <h4 class="modal-title" id="MyModalLabel">{{ 'Error'|trans }}</h4>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ error.message|trans }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock my_modals %}
{% block my_JS %}

{% endblock my_JS %}
<!-- App main JS -->
<script src="{{ asset('resources/app.js') }}"></script>
<script>
    {% block js_loaders %}{% endblock %}
</script>
</div>
<!-- /.content-wrapper-->
</body>
</html>
