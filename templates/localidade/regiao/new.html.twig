{% extends 'base.html.twig' %}

{% form_theme form 'form/horizontal-form-fields.html.twig' %}

{% block title %}{{ 'localidade.regiao.new-title'|trans }}{% endblock %}

{% block menu %}
    {% embed '_menu.html.twig' %}
        {% block app_panel %}
            {% include 'localidade/_app-menu.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock menu %}

{% block user_content %}
    <div class="content-wrapper">
        {{ parent() }} {# Printing Messages inside Wrapper Content #}
        <div class="container">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('localidade') }}">{{ 'home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('localidade_regiao_index') }}">{{ 'localidade.regiao.list-name'|trans }}</a>
                </li>
                <li class="breadcrumb-item">{{ 'new'|trans }}</li>
            </ol>
            <div class="row">
                <div class="col-12">
                    <h1>{{ 'localidade.regiao.new-title'|trans }}</h1>

                    <div class="card mb-3">
                        <div class="card-header bg-apps-2">
                            <i class="fa fa-2x fa-plus-circle fa-2x"></i>
                            {{ 'localidade.regiao.new-form-title'|trans }}
                        </div>
                        <div class="card-body form-with-cols">
                            {{ include('localidade/regiao/_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
