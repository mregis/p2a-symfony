{{ form_start(form) }}

<div class="form-group row">
    {{ form_label(form.nome, null, {'label_attr': {'class':'col-form-label col-2 text-right'}}) }}
    <div class="col-9">
        {{ form_errors(form.nome) }}
        {{ form_widget(form.nome) }}
    </div>
</div>

{{ form_widget(form) }}
<div class="row form-group justify-content-md-center">
    <div class="col-4">
        <button class="btn btn-primary btn-block " type="submit">
            <i class="fa fa-save"></i> {{ button_label|default('save')|trans }}
        </button>
    </div>
    <div class="col-4">
        <a class="btn btn-secondary btn-block" href="{{ path('malote_malha_index') }}">
            <i class="fa fa-close"></i> {{ button_label|default('cancel')|trans }}
        </a>
    </div>
</div>
{{ form_end(form) }}