{% extends 'base.html.twig' %}

{% block title %}{{ 'malote.roteiro.load-xlsfile-title'|trans }}{% endblock %}

{% block menu %}
    {% embed '_menu.html.twig' %}
        {% block app_panel %}
            {% include 'malote/_app-menu.html.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock menu %}

{% block user_content %}
    <div class="content-wrapper">
        {{ parent() }} {# Printing Messages inside Wrapper Content #}
        <div class="container">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('malote_home') }}">{{ 'home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('malote_roteiro_index') }}">{{ 'malote.roteiro.homepage'|trans }}</a></li>
                <li class="breadcrumb-item active">{{ 'malote.roteiro.load-xlsfile'|trans }}</li>
            </ol>
            <div class="row">
                <div class="col-12">
                    <h1>{{ 'malote.roteiro.load-xlsfile-title'|trans }}</h1>

                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="card mb-3 border-apps-2">
                        <div class="card-header bg-apps-2 text-white">
                            <div class="row">
                                <div class="col-sm-8">
                                    <i class="fa fa-2x fa-plus-circle fa-2x"></i>
                                    {{ 'malote.roteiro.load-xlsfile-form-title'|trans }}
                                </div>
                            </div>
                        </div>
                        <div class="card-body form-with-cols">
                            <div class="alert alert-info">
                                <p>{{ 'malote.roteiro.load-xlsfile-form-description'|trans|raw }}</p>

                                <p>
                                    <a class="link card-link" href="{{ path('malote_samplefile', {'source': 'roteiro'}) }}">
                                        {{ 'malote.roteiro.load-xlsfile-example-link'|trans }}
                                    </a>
                                </p>
                            </div>

                            <div class="form-group row">
                                {{ form_label(form.registry, null, {'label_attr': {'class':'col-form-label col-3 text-right'}}) }}
                                <div class="col-8">
                                    {{ form_errors(form.registry) }}
                                    {{ form_widget(form.registry) }}
                                </div>
                            </div>


                        </div>
                        <div class="card-footer">
                            <div class="row form-group justify-content-md-center">
                                <div class="col-4">
                                    <button class="btn btn-primary btn-block " type="submit">
                                        <i class="fa fa-save"></i> {{ button_label|default('save')|trans }}
                                    </button>
                                </div>
                                <div class="col-4">
                                    <a class="btn btn-secondary btn-block" href="{{ path('malote_roteiro_index') }}">
                                        <i class="fa fa-close"></i> {{ button_label|default('cancel')|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
