{% trans_default_domain 'security' %}
{% extends 'layout.html.twig' %}

{% set active = 'change-my-pass' %}

{% form_theme form 'form/fields.html.twig' %}

    {% block user_content %}
        <div class="central-container">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title">{{ 'change-password.title'| trans }}</h3>
                            </div>
                            <div class="panel-body">
                                <p class="text-info well well-sm">
                                    {{ 'change-password.message' |trans }}
                                </p>

                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                                <div class="row col-lg-12">
                                    <div class="form-group col-lg-12{% if form.oldpass.vars.valid==false %} has-error{% endif %}">
                                        {{ form_label(form.oldpass) }}
                                        {{ form_errors(form.oldpass) }}
                                        {{ form_widget(form.oldpass) }}
                                    </div>
                                </div>
                                <div class="row col-lg-12">
                                    <div class="form-group col-lg-12{% if form.password_repeated.vars.valid==false %} has-error{% endif %}">
                                        {{ form_label(form.password_repeated.first) }}
                                        {{ form_errors(form.password_repeated.first) }}
                                        {{ form_widget(form.password_repeated.first) }}
                                    </div>
                                </div>
                                <div class="row col-lg-12">
                                    <div class="form-group col-lg-12{% if form.password_repeated.vars.valid==false %} has-error{% endif %}">
                                        {{ form_label(form.password_repeated.second) }}
                                        {{ form_errors(form.password_repeated.second) }}
                                        {{ form_widget(form.password_repeated.second) }}
                                    </div>
                                </div>
                                <div class="row col-lg-12">

                                    <div class="form-group col-lg-12">
                                        {{ form_widget(form.submit) }}
                                    </div>
                                </div>
                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}