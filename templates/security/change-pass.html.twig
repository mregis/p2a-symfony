{% extends 'base.html.twig' %}
{% block title 'reset-password.title' | trans %}
{% block menu %}{% endblock menu %}
{% block user_content %}
    <div class="card card-login mx-auto mt-2 bg-gradient-card-primary">
        <div class="card-header">
            <div class="card-body-icon text-muted o-hidden">
                <i class="fa fa-fw fa-user-circle-o"></i>
            </div>
            {{ 'reset-password.title'| trans }}
        </div>
        <div class="card-body">
            <div class="text-center mt-2 mb-3">
                <p>{{ 'reset-password.message' |trans }}</p>
            </div>
            {{ form(form) }}
            <a class="btn btn-block btn-secondary" href="{{ path('home') }}">{{ 'cancel'|trans }}</a>
        </div>
    </div>

{% endblock %}

{% block footer %}
    <div id="no-menu-footer">
        {{ parent() }}
    </div>
{% endblock footer %}