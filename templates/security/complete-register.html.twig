{% trans_default_domain 'security' %}
{% extends 'layout.html.twig' %}

{% set active = 'complete-register' %}

{% form_theme form 'form/fields.html.twig' %}

{% block user_content %}
    <div class="central-container">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{ 'users.complete-register.title'| trans }}</h3>
                        </div>
                        <div class="panel-body">
                            <p class="text-info well well-sm">
                                {{ 'users.complete-register.message' |trans }}
                            </p>

                            {{ form_start(form) }}
                            {{ form_errors(form) }}
                            <div class="row col-lg-12">
                                <div class="form-group col-lg-12{% if form.username.vars.valid==false %} has-error{% endif %}">
                                    {{ form_label(form.username) }}
                                    {{ form_errors(form.username) }}
                                    {{ form_widget(form.username) }}
                                </div>
                            </div>
                            <div class="row col-lg-12">
                                <div class="form-group col-lg-12{% if form.email.vars.valid==false %} has-error{% endif %}">
                                    {{ form_label(form.email) }}
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email) }}
                                </div>
                            </div>
                            <div class="row col-lg-12">
                                <div class="form-group col-lg-12{% if form.roles.vars.valid==false %} has-error{% endif %}">
                                    {{ form_label(form.roles, null, {'label_attr': {'class': ''}}) }}
                                    {{ form_errors(form.roles) }}
                                    {{ form_widget(form.roles) }}
                                </div>
                            </div>

                            <div class="row col-lg-12">
                                <div class="form-group col-lg-12{% if form.name.vars.valid==false %} has-error{% endif %}">
                                    {{ form_label(form.name, null, {'label_attr': {'class': ''}}) }}
                                    {{ form_errors(form.name) }}
                                    {{ form_widget(form.name) }}
                                </div>
                            </div>

                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}