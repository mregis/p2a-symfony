{% extends 'layout.html.twig' %}

{% block title 'Recuperação de Senha' %}

{% block my_CSS %}
    <style>
        #page-top footer.sticky-footer { width: 100%; }
    </style>
{% endblock my_CSS %}

{% block user_content %}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">
            <div class="card-body-icon text-muted o-hidden ">
                <i class="fa fa-fw fa-question-circle-o"></i>
            </div>
            {{ 'forgot-password.title'|trans }}
        </div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>{{ 'forgot-password.message_1'|trans }}</h4>
                <p>{{ 'forgot-password.message_2'|trans }}</p>
            </div>
            {{ form_start(form) }}
                {{ form_errors(form) }}

                {{ form_row(form.username) }}
                {{ form_rest(form) }}
                <button class="btn btn-primary btn-block" type="submit">Enviar instruções</button>
            {{ form_end(form) }}
            <div class="text-center">
                <a class="d-block small mt-3" href="{{ path('login') }}">Página de Autenticação</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}