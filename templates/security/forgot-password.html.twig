{% extends 'layout.html.twig' %}
{% block user_content %}
    {{ parent() }}

<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">
            <div class="card-body-icon text-muted o-hidden ">
                <i class="fa fa-fw fa-question-circle-o"></i>
            </div>
            Redefinição de Senha
        </div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>Esqueceu a senha?</h4>
                <p>Entre com seu endereço de email e enviaremos as instruções de como redefinir sua senha.</p>
            </div>
            {{ form_start(form) }}
                {{ form_errors(form) }}

                {{ form_row(form.username) }}
                {{ form_rest(form) }}
                <button class="btn btn-primary btn-block" type="submit">Enviar instruções</button>
            {{ form_end(form) }}
            <div class="text-center">
                <a class="d-block small mt-3" href="{{ path('login') }}">Página de Autenticação</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}